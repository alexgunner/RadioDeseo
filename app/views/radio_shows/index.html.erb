<div class="row">
  <div class="col">
    <p id="notice"><%= notice %></p>

    <h1>Programas de la radio</h1>

    <%= link_to 'Crear programa', new_radio_show_path, class: "btn btn-primary btn-block" %>
    <br>

    <div class="row">
      <% @radio_shows.each do |radio_show| %>
          <div class="col-xl-3 col-lg-3 col-md-3 col-sm-4 col-xs-3">
            <%= render radio_show %>    
          </div>
      <% end %>
    </div>
  </div>
</div>