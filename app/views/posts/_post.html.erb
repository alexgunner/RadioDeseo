<div class="card">
  <%= image_tag("dummy.jpg", class: "img-fluid") %>
  <div class="card-body">
    <h4 class="card-title"><%= post.name %></h4>
    <p class="card-text"><%= post.content %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <h6>Categorías:</h6>
      <% post.categories.each do |category| %>
        <%= link_to category.name, category_url(category), class: "badge badge-pill badge-primary" %>
      <% end %>
    </li>
    <li class="list-group-item">
      <h6>Etiquetas:</h6>
      <% post.labels.each do |label| %>
        <%= link_to label.name, label_url(label), class: "badge badge-pill badge-success" %>
      <% end %>
    </li>
  </ul>
  <div class="card-body">
    <div class="row">
      <div class="col-sm-6 col-lg-6">
        <%= link_to edit_post_path(post), class: "btn btn-primary btn-block form-button" do %>   
          <i class="fas fa-edit "></i>
        <% end %>
      </div>
      <div class="col-sm-6 col-lg-6">
        <%= link_to post, method: :delete, data: { confirm: '¿Estás segur@?' }, class: "btn btn-secondary btn-block form-button" do %>
          <i class="fas fa-trash "></i>
        <% end %>
      </div>
    </div>
    
  </div>
</div>